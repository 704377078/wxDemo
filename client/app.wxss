.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}

.title {
  padding: 10px;
  background-color: #69a1d2;
  font-size: 24px;
}

.table {
  width: 100%;
  margin-bottom: 20px;
  display: table;
}

.table th {
  width:100%;
  font-weight: 400;
  background-color: #f6f8f9;
  color: #8d8d8d;
  height: 40px;
  line-height: 40px;
  text-align: center;
  white-space: nowrap;
}

.table td {
  height: 30px;
  line-height: 30px;
  width:100%;
  text-align: center;
}

.table tr {
   width: 100%;
  display: flex;
  border-bottom: 1px solid #e7e7eb;
}

